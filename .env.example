# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# JWT Secret for token signing (required)
JWT_SECRET=your_jwt_secret_here

# MongoDB connection string (required for database features)
MONGO_URI=mongodb://localhost:27017/mars-empire

# Email configuration for notifications
EMAIL_USER=your_gmail_username@gmail.com
EMAIL_PASS=your_gmail_app_password

# Base URL for the application
BASE_URL=https://mars-empire-mlm.onrender.com

# Google OAuth configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Node environment
NODE_ENV=development

# Port for the server
PORT=3000