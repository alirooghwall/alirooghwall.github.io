<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reports | MARS EMPIRE</title>
  <link rel="stylesheet" href="/assets/css/main.css">
  <style>
    .crud-btn { margin-left: 0.5rem; }
    input, select, textarea { margin: 0.2rem; width: 200px; }
    textarea { width: 300px; height: 100px; }
  </style>
</head>
<body>
  <main style="max-width:800px;margin:3rem auto;padding:1rem;">
    <h1>Reports</h1>
    
    <h2>Create New Report</h2>
    <form id="createReportForm">
      <input name="title" placeholder="Title" required />
      <select name="type" required>
        <option value="user_activity">user_activity</option>
        <option value="sales">sales</option>
        <option value="recruitment">recruitment</option>
        <option value="system">system</option>
      </select>
      <textarea name="data" placeholder="Data"></textarea>
      <button type="button" onclick="submitForm('createReportForm', '/reports/create')">Create Report</button>
    </form>
    
    <h2>All Reports</h2>
    <ul>
      <% reports.forEach(r => { %>
        <li>
          <strong><%= r.type %></strong>: <%= r.data %> (Created: <%= r.createdAt %>)
        </li>
      <% }); %>
    </ul>
    
    <a href="/profile">Back to Profile</a>
  </main>
    <script>
    async function submitForm(formId, action) {
      const form = document.getElementById(formId);
      const formData = new FormData(form);
      try {
        showLoader(true);
        const response = await fetch(action, {
          method: 'POST',
          credentials: 'include',
          body: formData
        });
        if (response.ok) {
          showToast('success', 'Saved');
          location.reload();
        } else {
          showToast('error', 'Error: ' + response.statusText);
        }
      } catch (error) {
        showToast('error', 'Error: ' + error.message);
      } finally { showLoader(false); }
    }
  </script>
</body>
</html>