<!DOCTYPE HTML>
<html>
<head>
  <title>Articles | MARS EMPIRE</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
  <link rel="stylesheet" href="assets/css/main.css" />
  <noscript><link rel="stylesheet" href="assets/css/noscript.css" /></noscript>
</head>
<body class="is-preload">
  <div id="wrapper">
    <header id="header">
      <a href="/" class="logo">MARS EMPIRE</a>
      <nav>
        <a href="#menu">Menu</a>
      </nav>
    </header>
    <nav id="menu">
      <ul class="links">
        <li><a href="/">Home</a></li>
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/rules">Rules</a></li>
        <li class="active"><a href="/articles">Articles</a></li>
        <li><a href="/resources">Resources</a></li>
        <li><a href="/checklists">Checklists</a></li>
        <li><a href="/tree">Tree</a></li>
        <li><a href="/calculator">Calculator</a></li>
        <li><a href="/leaderboard">Leaderboard</a></li>
        <% if (user.accountType === 'admin' || user.accountType === 'master_admin') { %>
        <li><a href="/admin">Admin</a></li>
        <% } %>
      </ul>
      <ul class="actions stacked">
        <li><a href="/profile" class="button primary fit">Profile</a></li>
        <li><button onclick="logout()" class="button fit">Logout</button></li>
      </ul>
    </nav>
    <div style="text-align: center; margin: 1rem;"><button onclick="history.back()" class="button">‚Üê Back</button></div>
    <div id="main">
      <section class="post">
        <header class="major">
          <h1>MLM Articles & Guides</h1>
          <p>Learn from expert-written articles on MLM strategies, success stories, and best practices.</p>
        </header>
        <% if (['admin', 'manager', 'editor'].includes(user.accountType)) { %>
          <h2>Create New Article</h2>
          <form id="createArticleForm">
            <input name="title" placeholder="Article Title" required style="width:100%;padding:0.5rem;" />
            <textarea name="content" placeholder="Article Content" rows="10" style="width:100%;padding:0.5rem;"></textarea>
            <input name="category" placeholder="Category (e.g., Strategy, Success)" style="width:100%;padding:0.5rem;" />
            <input name="tags" placeholder="Tags (comma separated)" style="width:100%;padding:0.5rem;" />
            <input name="files" type="file" multiple style="width:100%;padding:0.5rem;" />
            <label><input name="published" type="checkbox" /> Publish immediately</label>
            <button type="button" onclick="submitForm('createArticleForm', '/articles/create')" style="padding:0.5rem 1rem;">Create Article</button>
          </form>
        <% } %>
        <h2>Published Articles</h2>
        <% articles.forEach(article => { %>
          <article>
            <header>
              <h3><%= article.title %></h3>
              <p>By <%= article.author.name %> | Category: <%= article.category %> | Tags: <%= article.tags.join(', ') %></p>
            </header>
            <p><%= article.content.substring(0, 200) %>...</p>
            <% if (article.attachments && article.attachments.length) { %>
              <div>
                <strong>Attachments:</strong>
                <ul>
                  <% article.attachments.forEach(att => { %>
                    <li><a href="/uploads/<%= att.filename %>" target="_blank"><%= att.originalName %></a></li>
                  <% }) %>
                </ul>
              </div>
            <% } %>
            <% if (['admin', 'manager', 'editor'].includes(user.accountType)) { %>
              <form id="updateArticle<%= article._id %>">
                <input name="title" value="<%= article.title %>" required />
                <textarea name="content"><%= article.content %></textarea>
                <input name="category" value="<%= article.category %>" />
                <input name="tags" value="<%= article.tags.join(',') %>" />
                <label><input name="published" type="checkbox" <%= article.published ? 'checked' : '' %> /> Published</label>
                <button type="button" onclick="submitForm('updateArticle<%= article._id %>', '/articles/update/<%= article._id %>')">Update</button>
              </form>
              <form id="deleteArticle<%= article._id %>">
                <button type="button" onclick="if(confirm('Delete article?')) submitForm('deleteArticle<%= article._id %>', '/articles/delete/<%= article._id %>')">Delete</button>
              </form>
            <% } %>
          </article>
        <% }); %>
      </section>
    </div>
    <%- include('footer') %>
  </div>
  <script>
    async function logout() {
      await fetch('/logout', {
        method: 'POST',
        credentials: 'include'
      });
      window.location.href = '/';
    }
    async function submitForm(formId, action) {
      const form = document.getElementById(formId);
      const formData = new FormData(form);
      try {
        showLoader(true);
        const response = await fetch(action, {
          method: 'POST',
          credentials: 'include',
          body: formData
        });
        if (response.ok) {
          showToast('success', 'Saved');
          location.reload();
        } else {
          showToast('error', 'Error: ' + response.statusText);
        }
      } catch (error) {
        showToast('error', 'Error: ' + error.message);
      } finally { showLoader(false); }
    }
  </script>
  <script src="assets/js/jquery.min.js"></script>
  <script src="assets/js/jquery.scrollex.min.js"></script>
  <script src="assets/js/jquery.scrolly.min.js"></script>
  <script src="assets/js/browser.min.js"></script>
  <script src="assets/js/breakpoints.min.js"></script>
  <script src="assets/js/util.js"></script>
  <script src="assets/js/main.js"></script>
</body>
</html>