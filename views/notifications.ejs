<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Notifications | MARS EMPIRE</title>
  <link rel="stylesheet" href="/assets/css/main.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
  <%- include('nav') %>
  <main>
    <section>
      <h1>Notifications</h1>

      <% if (user.accountType === 'admin' || user.accountType === 'master_admin') { %>
        <h2>Create New Notification</h2>
        <form method="post" action="/notifications/create">
          <input name="userId" placeholder="User ID" required />
          <input name="title" placeholder="Title" required />
          <textarea name="message" placeholder="Message"></textarea>
          <select name="type">
            <option value="info">Info</option>
            <option value="warning">Warning</option>
            <option value="error">Error</option>
            <option value="success">Success</option>
          </select>
          <button type="submit">Create Notification</button>
        </form>
      <% } %>

      <h2>Your Notifications</h2>
      <ul>
        <% notifications.forEach(n => { %>
          <li class="<%= n.read ? 'read' : 'unread' %>">
            <strong><%= n.title %></strong>: <%= n.message %> (Type: <%= n.type %>, Created: <%= n.createdAt %>)
            <% if (!n.read) { %>
              <form method="post" action="/notifications/mark-read/<%= n._id %>" style="display:inline;">
                <button type="submit" class="crud-btn">Mark as Read</button>
              </form>
            <% } %>
          </li>
        <% }); %>
      </ul>
    </section>
  </main>
  <%- include('footer') %>
</body>
</html>