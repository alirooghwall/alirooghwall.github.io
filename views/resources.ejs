<!DOCTYPE HTML>
<html>
<head>
  <title>Resources | MARS EMPIRE</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
  <link rel="stylesheet" href="assets/css/main.css" />
  <noscript><link rel="stylesheet" href="assets/css/noscript.css" /></noscript>
</head>
<body class="is-preload">
  <div id="wrapper">
    <header id="header">
      <a href="/" class="logo">MARS EMPIRE</a>
      <nav>
        <a href="#menu">Menu</a>
      </nav>
    </header>
    <nav id="menu">
      <ul class="links">
        <li><a href="/">Home</a></li>
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/rules">Rules</a></li>
        <li><a href="/articles">Articles</a></li>
        <li class="active"><a href="/resources">Resources</a></li>
        <li><a href="/checklists">Checklists</a></li>
        <li><a href="/tree">Tree</a></li>
        <li><a href="/calculator">Calculator</a></li>
        <li><a href="/leaderboard">Leaderboard</a></li>
        <% if (user.accountType === 'admin' || user.accountType === 'master_admin') { %>
        <li><a href="/admin">Admin</a></li>
        <% } %>
      </ul>
      <ul class="actions stacked">
        <li><a href="/profile" class="button primary fit">Profile</a></li>
        <li><button onclick="logout()" class="button fit">Logout</button></li>
      </ul>
    </nav>
    <div style="text-align: center; margin: 1rem;"><button onclick="history.back()" class="button">‚Üê Back</button></div>
    <div id="main">
      <section class="post">
        <header class="major">
          <h1>MLM Resources & Study Materials</h1>
          <p>Access documents, videos, and links to enhance your MLM knowledge and skills.</p>
        </header>
        <% if (['admin', 'manager', 'editor'].includes(user.accountType)) { %>
          <h2>Add New Resource</h2>
          <form id="createResourceForm">
            <input name="title" placeholder="Resource Title" required style="width:100%;padding:0.5rem;" />
            <textarea name="description" placeholder="Description" rows="3" style="width:100%;padding:0.5rem;"></textarea>
            <select name="type" style="width:100%;padding:0.5rem;">
              <option value="document">Document</option>
              <option value="video">Video</option>
              <option value="link">Link</option>
              <option value="file">File</option>
            </select>
            <input name="url" placeholder="URL or File Path" style="width:100%;padding:0.5rem;" />
            <input name="file" type="file" style="width:100%;padding:0.5rem;" />
            <input name="category" placeholder="Category (e.g., Training, Marketing)" style="width:100%;padding:0.5rem;" />
            <select name="accessLevel" style="width:100%;padding:0.5rem;">
              <option value="public">Public</option>
              <option value="participants">Participants</option>
              <option value="managers">Managers</option>
            </select>
            <button type="button" onclick="submitForm('createResourceForm', '/resources/create')" style="padding:0.5rem 1rem;">Add Resource</button>
          </form>
        <% } %>
        <h2>Available Resources</h2>
        <% resources.forEach(resource => { %>
          <article>
            <header>
              <h3><%= resource.title %> (<%= resource.type %>)</h3>
              <p>Category: <%= resource.category %> | Access: <%= resource.accessLevel %></p>
            </header>
            <p><%= resource.description %></p>
            <% if (resource.type === 'link' && resource.url) { %>
              <a href="<%= resource.url %>" target="_blank">View Resource</a>
            <% } else if (resource.file && resource.file.filename) { %>
              <a href="/uploads/<%= resource.file.filename %>">Download/View</a>
            <% } else if (resource.url) { %>
              <a href="<%= resource.url %>">Open</a>
            <% } %>
            <% if (['admin', 'manager', 'editor'].includes(user.accountType)) { %>
              <form id="updateResource<%= resource._id %>">
                <input name="title" value="<%= resource.title %>" required />
                <textarea name="description"><%= resource.description %></textarea>
                <select name="type">
                  <option value="document" <%= resource.type === 'document' ? 'selected' : '' %>>Document</option>
                  <option value="video" <%= resource.type === 'video' ? 'selected' : '' %>>Video</option>
                  <option value="link" <%= resource.type === 'link' ? 'selected' : '' %>>Link</option>
                  <option value="file" <%= resource.type === 'file' ? 'selected' : '' %>>File</option>
                </select>
                <input name="url" value="<%= resource.url %>" />
                <input name="category" value="<%= resource.category %>" />
                <select name="accessLevel">
                  <option value="public" <%= resource.accessLevel === 'public' ? 'selected' : '' %>>Public</option>
                  <option value="participants" <%= resource.accessLevel === 'participants' ? 'selected' : '' %>>Participants</option>
                  <option value="managers" <%= resource.accessLevel === 'managers' ? 'selected' : '' %>>Managers</option>
                </select>
                <button type="button" onclick="submitForm('updateResource<%= resource._id %>', '/resources/update/<%= resource._id %>')">Update</button>
              </form>
              <form id="deleteResource<%= resource._id %>">
                <button type="button" onclick="if(confirm('Delete resource?')) submitForm('deleteResource<%= resource._id %>', '/resources/delete/<%= resource._id %>')">Delete</button>
              </form>
            <% } %>
          </article>
        <% }); %>
      </section>
    </div>
    <%- include('footer') %>
  </div>
  <script>
    async function logout() {
      await fetch('/logout', {
        method: 'POST',
        credentials: 'include'
      });
      window.location.href = '/';
    }
    async function submitForm(formId, action) {
      const form = document.getElementById(formId);
      const formData = new FormData(form);
      try {
        showLoader(true);
        const response = await fetch(action, {
          method: 'POST',
          credentials: 'include',
          body: formData
        });
        if (response.ok) {
          showToast('success', 'Saved');
          location.reload();
        } else {
          showToast('error', 'Error: ' + response.statusText);
        }
      } catch (error) {
        showToast('error', 'Error: ' + error.message);
      } finally { showLoader(false); }
    }
  </script>
  <script src="assets/js/jquery.min.js"></script>
  <script src="assets/js/jquery.scrollex.min.js"></script>
  <script src="assets/js/jquery.scrolly.min.js"></script>
  <script src="assets/js/browser.min.js"></script>
  <script src="assets/js/breakpoints.min.js"></script>
  <script src="assets/js/util.js"></script>
  <script src="assets/js/main.js"></script>
</body>
</html>